{
    "compilerOptions": {
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "outDir": "dist",
        "removeComments": true,
        "rootDir": ".",
        "skipLibCheck": true,
        "sourceMap": false,
        "strict": true,
        "target": "es6",
        "types": ["node"]
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
