{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "tfx",
    "isShellCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "release",
            "args": ["extension", "create", "--manifest-globs", "${workspaceRoot}/vss-extension.json"],
            "suppressTaskName": true,
            "isBuildCommand": true
        },
        {
            "taskName": "preview",
            "args": ["extension", "create", "--manifest-globs", "${workspaceRoot}/vss-extension-preview.json"],
            "suppressTaskName": true,
            "isBuildCommand": true
        }
    ]
}